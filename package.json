{
  "name": "ceri-dropdown",
  "description": "a advanced dropdown menu",
  "version": "0.0.2",
  "homepage": "https://github.com/ceri-comps",
  "author": {
    "name": "Paul Pflugradt",
    "email": "paul.pflugradt@gmail.com"
  },
  "license": "MIT",
  "main": "dropdown.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/ceri-comps/ceri-dropdown"
  },
  "engines": {
    "node": "*"
  },
  "dependencies": {
    "ceri": "^1.0.3"
  },
  "devDependencies": {
    "ceri-materialize": "^1.0.0",
    "ceri-compiler": "^1.0.0",
    "ceri-dev-server": "^1.0.0",
    "coffee-loader": "^0.7.2",
    "coffee-script": "^1.12.3",
    "css-loader": "^0.27.3",
    "gh-pages": "^0.12.0",
    "node-sass": "^4.5.0",
    "sass-loader": "^6.0.3",
    "script-runner": "^0.1.6"
  },
  "keywords": [
    "dropdown",
    "component",
    "ceri"
  ],
  "readmeFilename": "README.md",
  "scripts": {
    "build:coffee": "coffee -c -o . src/dropdown.coffee",
    "build:bundle": "ceri-compiler -b dropdown.js",
    "build": "run-npm build:*",
    "dev": "ceri-dev-server",
    "watch": "ceri-dev-server --test --watch",
    "test": "ceri-dev-server --test",
    "preversion": "npm test",
    "version": "npm run build && git add .",
    "postversion": "git push && git push --tags && npm publish",
    "ghpages": "ceri-dev-server --static static/ && gh-pages -d static"
  }
}